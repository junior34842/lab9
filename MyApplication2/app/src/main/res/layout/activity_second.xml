<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="TextView"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_result_id_std" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp" android:layout_margin="6dp"
        app:layout_constraintEnd_toStartOf="@id/text_view_id_std"/>
    <TextView
        android:text="TextView"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_result_id_std"
        android:id="@+id/text_view_result_first_name" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp" android:layout_margin="6dp"
        app:layout_constraintEnd_toStartOf="@id/text_view_id_std"/>
    <TextView
        android:text="TextView"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_result_first_name"
        android:id="@+id/text_view_result_last_name" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp" android:layout_margin="6dp"
        app:layout_constraintEnd_toStartOf="@id/text_view_id_std"/>


</RelativeLayout>